<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/alertView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/alert_background"
        android:paddingBottom="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/alertViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textSize="30dp"
            />

        <TextView
            android:id="@+id/alertViewMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alertViewTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textColor="@color/grey"
            />

        <Button
            android:id="@+id/alertViewButtonNextRound"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/alertViewMessage"
            android:layout_centerHorizontal="true"
            android:background="@drawable/alert_button"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="20dp"
            android:text="OK"/>

        <Button
            android:id="@+id/alertViewButtonCancel"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/alertViewMessage"
            android:layout_alignParentStart="true"
            android:background="@drawable/alert_button"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="20dp"
            android:text="Abbrechen"
            />
        <Button
            android:id="@+id/alertViewButtonNewGame"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/alertViewMessage"
            android:layout_alignParentEnd="true"
            android:background="@drawable/alert_button"
            android:visibility="gone"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Neues Spiel"
            />



    </RelativeLayout>
</RelativeLayout>